
@model Garaaz.Models.ResponseSupportQuery
@using Garaaz.Models


@{
    ViewBag.Title = "AddSupportQuery";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isFromNotification = ViewBag.IsFromNotification;
}
<div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor">
    <div class="kt-subheader-search">
        <h3 class="kt-subheader-search__title">
            Support Query Master
        </h3>
    </div>


    <header class="ribbon">
        <h2>&nbsp;</h2>
    </header>

    <div class="page-content">
        <div class="page-content">
            @{Html.RenderPartial("alerts");}

            <div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
                <div class="row">
                    <div class="col-md-12">
                        <!--begin::Portlet-->
                        <div class="kt-portlet">
                            <div class="kt-portlet__head">
                                <div class="kt-portlet__head-label">
                                    <h3 class="kt-portlet__head-title">
                                        @{
                                            if (isFromNotification)
                                            {
                                                <span>@Model.Phone</span>
                                                <span>@Model.Email</span>
                                            }
                                            else
                                            {
                                                <span>Add Support Query</span>
                                            }
                                        }


                                    </h3>
                                </div>
                                @{
                                    if (!isFromNotification)
                                    {
                                        <div class="kt-portlet__head-toolbar">
                                            <div class="kt-portlet__head-wrapper">
                                                <div class="kt-portlet__head-actions">
                                                    <a href="/admin/SupportQuery" class="btn btn-brand btn-elevate btn-icon-sm">
                                                        <i class="la la-step-backward"></i>
                                                        Back
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                            @using (Html.BeginForm())
                            {
                                <div class="kt-form">
                                    <div class="kt-portlet__body">


                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label>Subject<em>*</em></label>

                                                    @Html.HiddenFor(model => model.Id)

                                                    @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control required" } })
                                                    @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                                                </div>

                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group ">
                                                    <label>Message<em>*</em></label>

                                                    @Html.TextAreaFor(model => model.Message, new { @class = "form-control required", @style = "height: 100px;" })
                                                    @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>

                                if (!isFromNotification)
                                {
                                    <div class="kt-portlet__foot">
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                        </div>
                                    </div>
                                }
                            }

                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
