@model Garaaz.Models.DashboardOverview.Customer.CustomerInfoResponse
@{
    string errorMsg = ViewBag.ErrorMsg;
    if (string.IsNullOrWhiteSpace(errorMsg) && Model == null)
    {
        errorMsg = "Model is not set";
    }
}

<div class="kt-widget24__details">
    <div class="kt-widget24__info">
        @if (string.IsNullOrWhiteSpace(errorMsg) && Model != null)
        {
            <h4>
                @Model.DateInfo
            </h4>
            <span class="kt-widget24__title dbRed">
                <span class="pr-2">@($"NB - {Model.NonBilledCustomers}/{Model.TotalCustomers}")</span> <span class="growthPercent">(@Model.NonBilledCustomersRatio.ToString("P"))</span>
            </span>
            <span class="kt-widget24__title dbGreen">
                <span class="pr-2">@($"B - {Model.BilledCustomers}/{Model.TotalCustomers}")</span> <span class="growthPercent">(@Model.BilledCustomersRatio.ToString("P"))</span>
            </span>
        }
        else
        {
            <p class="kt-font-bold">
                <i class="kt-font-warning flaticon-warning-sign"></i>
                &nbsp;@errorMsg
            </p>
        }
    </div>
</div>
