@model List<Garaaz.Models.DashboardOverview.Outstanding.OsInfoResponse>
@{
    string errorMsg = ViewBag.ErrorMsg;
    if (string.IsNullOrWhiteSpace(errorMsg) && Model == null)
    {
        errorMsg = "Model is not set";
    }
}

@if (string.IsNullOrWhiteSpace(errorMsg) && Model != null)
{
    <div class="row">
        @foreach (var osInfoResp in Model)
        {
        <div class="col-md-12 col-lg-4 col-xl-4">
            <a href="javascript:void(0);" onclick="dbOs.fetchGroupWiseOsDetail('@osInfoResp.Category')">
                <div class="info-box info-sub">
                    <div class="kt-widget24">
                        <div class="kt-widget24__details">
                            <div class="kt-widget24__info">
                                <h4>
                                    @osInfoResp.DateInfo
                                </h4>
                                <span class="kt-widget24__title dbRed">
                                    <span class="pr-2">@osInfoResp.TotalOutstanding</span>
                                </span>
                                <span class="kt-widget24__desc dbRed">
                                    @osInfoResp.OutstandingDays
                                </span><br />
                                <span class="kt-widget24__desc dbRed">
                                    @osInfoResp.CriticalPayment
                                </span>
                            </div>
                        </div>
                    </div>
                    <h4 class="kt-widget24__title" style="text-align: center;">
                        @osInfoResp.Footer
                    </h4>
                </div>
            </a>
        </div>
        }
    </div>
}
else
{
    <p class="kt-font-bold">
        <i class="kt-font-warning flaticon-warning-sign"></i>
        &nbsp;@errorMsg
    </p>
}


