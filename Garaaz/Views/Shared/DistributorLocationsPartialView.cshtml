@model IEnumerable<Garaaz.Models.DistributorLocation>

<div class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="kt-font-brand flaticon2-line-chart"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                Distributor Location code
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    <a href="/@ViewBag.Controller/AddDistributorLocations?distributorId=@ViewBag.distributorId" class="btn btn-brand btn-elevate btn-icon-sm">
                        <i class="la la-plus"></i>
                        Add New
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <!--begin: Datatable -->
        <table class="table table-striped- table-bordered table-hover table-checkable datatable" id="kt_table_1">
            <thead>
                <tr>
                    <th>Location Code</th>
                    <th>Location Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="@item.LocationId">
                        <td>
                            @Html.DisplayFor(m => item.LocationCode)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Location)
                        </td>
                        <td>
                            <span class="dropdown">
                                <a href="#" class="btn btn-sm btn-brand btn-icon btn-icon-md" data-toggle="dropdown" aria-expanded="false">
                                    <i class="la la-ellipsis-h"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" x-placement="top-end">
                                    <a class="dropdown-item" href="/@ViewBag.Controller/AddDistributorLocations?mode=edit&distributorId=@ViewBag.distributorId&locationId=@item.LocationId">
                                        <i class="la la-edit"></i> Edit
                                    </a>
                                    <a class="dropdown-item" onclick="admin.DeleteLocation(this,'@ViewBag.Controller')" href="javascript:void(0);">
                                        <i class="la la-trash"></i> Delete
                                    </a>
                                </div>
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('table.datatable').dataTable();
    });
</script>


