@model List<Garaaz.Models.Import.ImportErrorMessage>

@{
    var anchorText = "Click here for details";
}

@if (TempData["success"] != null)
{
    <div class="alert alert-success">
        @TempData["success"].ToString()
        @if (Model?.Count > 0)
        {
            <a href="#importStatus" class="pl-1 imp-alert-text">@anchorText</a>
        }
    </div>
}
else if (TempData["error"] != null)
{
    <div class="alert alert-danger">
        @TempData["error"].ToString()
        @if (Model?.Count > 0)
        {
            <a href="#importStatus" class="pl-1 imp-alert-text">@anchorText</a>
        }
    </div>
}