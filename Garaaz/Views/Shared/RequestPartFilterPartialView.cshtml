@model IEnumerable<Garaaz.Models.RequestPartViewModel>

<div class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="kt-font-brand flaticon2-line-chart"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                Request Part Filter List
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    <a href="/@ViewBag.Controller/AddRequestPartFilter?distributorId=@ViewBag.distributorId" class="btn btn-brand btn-elevate btn-icon-sm">
                        <i class="la la-plus"></i>
                        Add New
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <!--begin: Datatable -->
        <table class="table table-striped- table-bordered table-hover table-checkable datatable" id="kt_table_1">
            <thead>
                <tr>
                    <th>
                        CarMake
                    </th>
                    <th>
                        Model
                    </th>
                    <th>
                        Year
                    </th>
                    <th>
                        Modification
                    </th>
                    <th>
                        PartGroup
                    </th>
                    <th>
                        PartNumber
                    </th>
                    <th>
                        Root PartNumber
                    </th>
                    <th>
                        Part Description
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="@item.Id">
                        <td>
                            @Html.DisplayFor(ModelItem => item.CarMake)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ModelNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Year)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Modification)
                        </td>
                        <td>
                            @item.PartGroup
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PartNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RootPartNumber)
                        </td>
                        <td>
                            @item.PartDescription
                        </td>
                        <td>
                            <span class="dropdown">
                                <a href="#" class="btn btn-sm btn-brand btn-icon btn-icon-md" data-toggle="dropdown" aria-expanded="false">
                                    <i class="la la-ellipsis-h"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" x-placement="top-end">
                                    <a class="dropdown-item" href="/@ViewBag.Controller/AddRequestPartFilter/@item.Id?mode=edit&distributorId=@ViewBag.distributorId">
                                        <i class="la la-edit"></i> Edit
                                    </a>
                                    <a class="dropdown-item" onclick="admin.DeleteRequestPartFilter(this)" href="javascript:void(0);">
                                        <i class="la la-trash"></i> Delete
                                    </a>
                                </div>
                            </span>
                        </td>
                    </tr>
                    // }
                }
            </tbody>
        </table>
        <!--end: Datatable -->
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('table.datatable').dataTable();
    });
</script>


