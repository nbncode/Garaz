@model IEnumerable<Garaaz.Models.ResponseProductModel>

<div class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="kt-font-brand flaticon2-line-chart"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                Part Master
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    <a href="/@ViewBag.Controller/AddProduct?ProductId=0&mode=add" class="btn btn-brand btn-elevate btn-icon-sm">
                        <i class="la la-plus"></i>
                        Add New
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <!--begin: Datatable -->
        <table class="table table-striped- table-bordered table-hover table-checkable datatable" id="kt_table_1">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Group Name</th>
                    <th>Part Number</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Image</th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                <tr id="@item.ProductId">
                    <td>
                        @item.ProductName
                    </td>
                    <td>
                        @item.GroupName
                    </td>
                    <td>
                        @item.PartNumber
                    </td>
                    <td>
                        @item.Price
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        <img src="@item.ImagePath" width="50" height="50" />
                    </td>
                    <td>
                        <span class="dropdown">
                            <a href="#" class="btn btn-sm btn-brand btn-icon btn-icon-md" data-toggle="dropdown" aria-expanded="false">
                                <i class="la la-ellipsis-h"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" x-placement="top-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(-214px, -144px, 0px);">


                                <a class="dropdown-item" href="/@ViewBag.Controller/AddProduct?ProductId=@item.ProductId&mode=edit">
                                    <i class="la la-edit"></i> Edit
                                </a>

                                <a class="dropdown-item" id="Delete" onclick="admin.DeleteProduct(this)" href="javascript:void(0);">
                                    <i class="la la-trash"></i> Delete
                                </a>
                            </div>
                        </span>
                    </td>
                </tr>
                }
            </tbody>

        </table>
        <!--end: Datatable -->
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('table.datatable').dataTable();
    });


</script>

