        </div>
    </div>
</div>
<div class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="kt-font-brand flaticon2-line-chart"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                Sales List
            </h3>
        </div>

    </div>
    <div class="kt-portlet__body">

        <table class="table table-striped- table-bordered table-hover table-checkable datatable" id="kt_table_2">
            <thead>
                <tr>
                    <th>RetailQty</th>
                    @*<th>ReturnQty</th>
                    <th>NetRetailQty</th>
                    <th>RetailSelling</th>
                    <th>ReturnSelling</th>
                    <th>NetRetailSelling</th>
                    <th>DiscountAmount</th>
                    <th>PartNum</th>
                    <th>WorkshopName</th>
                    <th>CreatedDate</th>
                    <th>LocCode</th>
                    <th>LocDesc</th>
                    <th>PartDesc</th>
                    <th>RootPartNum</th>
                    <th>PartCategory</th>
                    <th>PartGroup</th>
                    <th>ConsPartyCode</th>
                    <th>Region</th>
                    <th>DealerCode</th>
                    <th>ConsPartyTypeDesc</th>
                    <th>DocumentNum</th>
                    <th>Remarks</th>*@
                </tr>
            </thead>
        </table>

        @if (Model != null)
        {
            <table class="table table-striped- table-bordered table-hover table-checkable datatable" id="kt_table_1">
                <thead>
                    <tr>
                        <th>RetailQty</th>
                        <th>ReturnQty</th>
                        <th>NetRetailQty</th>
                        <th>RetailSelling</th>
                        <th>ReturnSelling</th>
                        <th>NetRetailSelling</th>
                        <th>DiscountAmount</th>
                        <th>PartNum</th>
                        <th>WorkshopName</th>
                        <th>CreatedDate</th>
                        <th>LocCode</th>
                        <th>LocDesc</th>
                        <th>PartDesc</th>
                        <th>RootPartNum</th>
                        <th>PartCategory</th>
                        <th>PartGroup</th>
                        <th>ConsPartyCode</th>
                        <th>Region</th>
                        <th>DealerCode</th>
                        <th>ConsPartyTypeDesc</th>
                        <th>DocumentNum</th>
                        <th>Remarks</th>

                        @*
                            <th>DistributorId</th>
                            <th>UserId</th>*@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.RetailQty)</td>
                            <td>@Html.DisplayFor(modelItem => item.ReturnQty)</td>
                            <td>@Html.DisplayFor(modelItem => item.NetRetailQty)</td>
                            <td>@Html.DisplayFor(modelItem => item.RetailSelling)</td>
                            <td>@Html.DisplayFor(modelItem => item.ReturnSelling)</td>
                            <td>@Html.DisplayFor(modelItem => item.NetRetailSelling)</td>
                            <td>@Html.DisplayFor(modelItem => item.DiscountAmount)</td>
                            <td>@Html.DisplayFor(modelItem => item.PartNum)</td>
                            <td>@Html.DisplayFor(modelItem => item.ConsPartyName)</td>
                            <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.LocCode)</td>
                            <td>@Html.DisplayFor(modelItem => item.LocDesc)</td>
                            <td>@Html.DisplayFor(modelItem => item.PartDesc)</td>
                            <td>@Html.DisplayFor(modelItem => item.RootPartNum)</td>
                            <td>@Html.DisplayFor(modelItem => item.PartCategory)</td>
                            <td>@Html.DisplayFor(modelItem => item.PartGroup)</td>
                            <td>@Html.DisplayFor(modelItem => item.ConsPartyCode)</td>
                            <td>@Html.DisplayFor(modelItem => item.Region)</td>
                            <td>@Html.DisplayFor(modelItem => item.DealerCode)</td>
                            <td>@Html.DisplayFor(modelItem => item.ConsPartyTypeDesc)</td>
                            <td>@Html.DisplayFor(modelItem => item.DocumentNum)</td>
                            <td>@Html.DisplayFor(modelItem => item.Remarks)</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h4>No sales data available.</h4>
        }

    </div>
</div>

<script type="text/javascript">
    $(document).ready(function ()
    {
        var table = $('table.datatable').DataTable({
            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": false, // this is for disable filter (search box)
            "orderMulti": false, // for disable multiple column at once
            responsive: true,
            "ajax": {
                "url": "/home/LoadDailySales",
                "type": "POST",
                "datatype": "json"
            },
            "columns": [
                { "data": "RetailQty", "name": "RetailQty", "autoWidth": true }
                //{ "data": "CompanyName", "name": "CompanyName", "autoWidth": true },
                //{ "data": "Phone", "name": "Phone", "autoWidth": true },
                //{ "data": "Country", "name": "Country", "autoWidth": true },
                //{ "data": "City", "name": "City", "autoWidth": true },
                //{ "data": "PostalCode", "name": "PostalCode", "autoWidth": true }
            ]

        });

        new $.fn.dataTable.FixedHeader(table);
    });
</script>
