@model IEnumerable<Garaaz.Models.DistributorUsers.DistributorOutletModel>

<div class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="kt-font-brand flaticon2-line-chart"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                Outlets List
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    <a href="/@ViewBag.Controller/AddDistributorOutlets?distributorId=@ViewBag.distributorId" class="btn btn-brand btn-elevate btn-icon-sm">
                        <i class="la la-plus"></i>
                        Add New
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <table class="table table-striped- table-bordered table-hover table-checkable datatable" id="kt_table_1">
            <thead>
                <tr>
                    <th>
                        Outlet Code
                    </th>
                    <th>
                        Outlet Name
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        Ro Incharge
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr id="@item.OutletId">
                    <td>
                        @item.OutletCode
                    </td>
                    <td>
                        @item.OutletName
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @item.RoIncharge
                    </td>
                    <td>
                        <span class="dropdown">
                            <a href="#" class="btn btn-sm btn-brand btn-icon btn-icon-md" data-toggle="dropdown" aria-expanded="false">
                                <i class="la la-ellipsis-h"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" x-placement="top-end">
                                <a class="dropdown-item" href="/@ViewBag.Controller/AddDistributorOutlets/@item.OutletId?mode=edit&distributorId=@ViewBag.distributorId">
                                    <i class="la la-edit"></i> Edit
                                </a>
                                <a class="dropdown-item" onclick="admin.DeleteOutlet(this)" href="javascript:void(0);">
                                    <i class="la la-trash"></i> Delete
                                </a>
                                <a class="dropdown-item" href="/@ViewBag.Controller/DistributorUsers?OutletId=@item.OutletId">
                                    <i class="la la-list-alt"></i> Outlet Users
                                </a>
                            </div>
                        </span>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('table.datatable').dataTable();
    });
</script>

