@model ClsRoSalesExecutive
@using Garaaz.Models;
@{
    ViewBag.Title = "Set Sales Executives";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var roUserId = ViewBag.RoUserId;   
    var SeUsers = (List<UserDetail>)ViewBag.SeUsers;
}


<div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor">
    <div class="kt-subheader-search">
        <h3 class="kt-subheader-search__title">
            Sales Executives
        </h3>
    </div>
    <header class="ribbon">
        <h2>&nbsp;</h2>
    </header>
    <div class="page-content">
        <div class="page-content">
            <div class="kt-content  kt-grid__item kt-grid__item--fluid" id="main-content">
                @{Html.RenderPartial("alerts");}
                <div class="row">
                    <div class="col-md-12">
                        <!--begin::Portlet-->
                        <div class="kt-portlet">
                            <div class="kt-portlet__head">
                                <div class="kt-portlet__head-label">
                                    <h3 class="kt-portlet__head-title">
                                        Set Sales Exeuctives
                                    </h3>
                                </div>
                                <div class="kt-portlet__head-toolbar">
                                    <div class="kt-portlet__head-wrapper">
                                        <div class="kt-portlet__head-actions">
                                            <a href="@Request.UrlReferrer" class="btn btn-brand btn-elevate btn-icon-sm">
                                                <i class="la la-step-backward"></i>
                                                Back
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="panel-body">
                                <div class="kt-form">
                                    <div class="kt-portlet__body">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    @if (Model != null && Model.SeUserIds.Count > 0)
                                                    {
                                                        <div class="row">
                                                            @foreach (var user in SeUsers)
                                                            {
                                                                if (Model.SeUserIds.Contains(user.UserId))
                                                                {
                                                                    <div class="col-md-2">
                                                                        <div class="form-group">
                                                                            <input type="checkbox" checked class="icheck_n" name="User" value="@user.UserId"><label>@user.FirstName @user.LastName</label>
                                                                        </div>
                                                                    </div>
                                                                }
                                                                else
                                                                {
                                                                    <div class="col-md-2">
                                                                        <div class="form-group">
                                                                            <input type="checkbox" class="icheck_n" name="User" value="@user.UserId"><label>@user.FirstName @user.LastName</label>
                                                                        </div>
                                                                    </div>
                                                                }
                                                            }

                                                        </div>
                                                    }

                                                    @if (Model.SeUserIds.Count == 0)
                                                    {

                                                        <div class="row">
                                                            @{
                                                                foreach (var item in SeUsers)
                                                                {
                                                                    <div class="col-md-2">
                                                                        <div class="form-group">
                                                                            <input type="checkbox" class="icheck_n" name="@item.UserId" value="@item.UserId"><label>@item.FirstName @item.LastName</label>
                                                                        </div>
                                                                    </div>
                                                                }
                                                            }
                                                        </div>
                                                    }



                                                </div>
                                                <!-- /.panel-body -->

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.panel-primary panel -->
                            </div>
                            <!-- /.col-md-7 -->
                            <div class="kt-portlet__foot">
                                <div class="form-group">
                                    <a href="javascript:void(0);" class="btn btn-primary text-white" onclick="admin.SubmitSalesExecutives('@roUserId','@ViewBag.Controller')">Submit</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
