                    <option value="All">All</option>
                    @foreach (var pt in ClsSchema.ProductTypes)
                    {
                        <option value="@pt.Value">@pt.Text</option>
                    }
                </select>
            </div>
        </div>

        <div class="col-sm-3">
            <div class="form-group">
                <label>Parts/Accessories</label>
                <select class="form-control product">
                    <option value="">--Select--</option>
                    @foreach (var l in products)
                    {
                        <option value="@l.ProductId.ToString()">@l.ProductName</option>
                    }
                </select>
            </div>
        </div>


        <div class="col-sm-3">
            <div class="form-group">
                <label>Number Of Coupons</label>
                <input type="text" class="form-control number-Of-coupons" placeholder="Number Of Coupons">
            </div>
        </div>

        <div class="col-sm-5">
            <div class="form-group">
                <label>Additional Coupon Amount<em>*</em></label>
                <input type="text" class="form-control additional-coupon-amount" placeholder="Additional Coupon Amount">
