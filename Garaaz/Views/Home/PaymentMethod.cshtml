@model string
@using Garaaz.Models;

@{
    ViewBag.Title = "Payment Method";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var sGrandTotal = string.Empty;
    if (!string.IsNullOrEmpty(Model))
    {
        sGrandTotal = String.Format("{0:0.00}", Model);
    }

}

